<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include ('../../partials/head') %>
    <link href="/css/styles_register.css" rel="stylesheet" />
    <link href="/css/styles_login.css" rel="stylesheet" />
  </head>

  <!--Header-->
  <%- include ('../../partials/header') %>

  <body>
    <main>
      <section class="logear-usuario">
        <form action="/" method="GET">
          <div class="input-container">
            <input
              type="text"
              name="user"
              id="user"
              placeholder="Nombre de Usuario"
              minlength="6"
              required
            />
          </div>

          <div class="input-container">
            <input
              type="password"
              name="pwd"
              id="pwd"
              placeholder="Password"
              required
            />
          </div>
          <button type="submit">Enviar</button>
        </form>
      </section>

      <!--Product Promotion-->
      <%- include ('../products/productsPromotion') %>
    </main>
    <!--Footer-->
    <%- include ('../../partials/footer') %>
  </body>
</html>
